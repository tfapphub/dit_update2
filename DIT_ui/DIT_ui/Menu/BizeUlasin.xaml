<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DIT_ui.Menu.BizeUlasin" BackgroundColor="#082631">
 
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackLayout Grid.Row="0">
                <Image Source="LogTez.png" WidthRequest="200" HorizontalOptions="CenterAndExpand"  VerticalOptions="CenterAndExpand"  Margin="-15,0,0,0"/>
            </StackLayout>

            <StackLayout Grid.Row="1">
                <StackLayout Margin="20,0,20,0">
                    <Label VerticalTextAlignment="Center" TextColor="White"  HorizontalOptions="CenterAndExpand" FontSize="30" FontFamily="{StaticResource BebasNeue-Regular}" Text="Bir sorun ile karşılaşırsanız hemen en yakındaki görevliye başvurun, daha büyük bir sorunda ise bize mail atabilirsiniz."/>
                </StackLayout>
                <Button x:Name="btn_mail" Text="Mail Gönder" FontSize="30" FontFamily="{StaticResource BebasNeue-Regular}" BackgroundColor="White" CornerRadius="25" TextColor="#082631" HeightRequest="50" Margin="20,10,20,0"/>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
   
</ContentPage>